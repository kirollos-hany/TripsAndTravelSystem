@using TripsAndTravelSystem.Models;
@model List<TravelerQuestion>
@{
    ViewBag.Title = "Questions";
    Layout = "~/Views/Shared/_WallLayout .cshtml";
}
@foreach (var question in Model)
{
    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <div class="comment-section">
                    <div class="card p-3 bg-white mt-3">
                        <div class="d-flex justify-content-between mt-2">
                            <div class="d-flex flex-row">
                                <div class="user-image"> <img src="/image/serveimage/?id=@question.TravelerId" width="40" class="rounded-circle"> </div>
                                <div class="d-flex flex-column">
                                    @{
                                        var name = question.Traveler.FirstName + " " + question.Traveler.LastName;
                                    }
                                    <h6 class="mb-0">@name</h6> <span class="date">@question.QuestionDate.ToShortDateString()</span>
                                </div>
                            </div>
                        </div>
                        <p class="content">@question.Question</p>
                        @{
                            if (question.Answer != null)
                            {
                                <div class="d-flex justify-content-between mt-2 ex1">
                                    <div class="d-flex flex-row ">
                                        <div class="user-image ">
                                            <i class="fas fa-share"></i>
                                            <img src="/image/serveimage/?id=@question.Agency.UserId" width="40" class="rounded-circle p-6">
                                        </div>
                                        <div class="d-flex flex-column">
                                            @{
                                                var agencyName = question.Agency.FirstName + " " + question.Agency.LastName;
                                            }
                                            <h6 class="mb-0">@agencyName</h6> <span class="date">@question.AnswerDate</span>
                                        </div>
                                    </div>
                                </div>
                                <p class="content ex1">@question.Answer</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="comment-section">
                <div class="card p-3  mt-3 bd-1">
                    <div class="form">
                        <h4>Add Questions</h4>
                        <input class="form-control" placeholder="Ask Questions..." type="text" name="questionText">
                        <div class="mt-2 d-flex justify-content-end">
                            <div class="col-md-6">
                                <select class="form-select" aria-label="Default select example" id="selectAgency">
                                    <option value="default">Agency</option>
                                    @foreach (var agency in ViewBag.Agencies)
                                    {
                                        var fullName = agency.FirstName + " " + agency.LastName;
                                        <option value="@agency.UserId">@fullName</option>
                                    }
                                </select>
                            </div>
                            <button class="btn btn-primary btn-sm ms-1" id="addQuestionBtn">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
