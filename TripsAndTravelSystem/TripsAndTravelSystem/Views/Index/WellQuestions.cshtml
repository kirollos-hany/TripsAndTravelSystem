@{
    ViewBag.Title = "WellQuestions";
    Layout = "~/Views/Share/_WallLayout .cshtml";
}
@foreach (var question in ViewBag.Questions)
{
    <div class="container mt-5 mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <div class="comment-section">
                    <div class="card p-3 bg-white mt-3">
                        <div class="d-flex justify-content-between mt-2">
                            <div class="d-flex flex-row">
                                <div class="user-image"> <img src="/image/serveimage/?id=@ViewBag.User.user_id" width="40" class="rounded-circle"> </div>
                                <div class="d-flex flex-column">
                                    @{
                                        var name = ViewBag.User.first_name + " " + ViewBag.User.last_name;
                                    }
                                    <h6 class="mb-0">@name</h6> <span class="date">@question.question_date</span>
                                </div>
                            </div>
                        </div>
                        <p class="content">@question.question</p>
                        @{
                            if (question.answer != null)
                            {
                                <div class="d-flex justify-content-between mt-2 ex1">
                                    <div class="d-flex flex-row ">
                                        <div class="user-image ">
                                            <i class="fas fa-share"></i>
                                            <img src="/image/serveimage/?id=@question.agency.user_id" width="40" class="rounded-circle p-6">
                                        </div>
                                        <div class="d-flex flex-column">
                                            @{
                                                var agencyName = question.agency.first_name + " " + question.agency.last_name;
                                            }
                                            <h6 class="mb-0">@agencyName</h6> <span class="date">@question.answer_date</span>
                                        </div>
                                    </div>
                                </div>
                                <p class="content ex1">@question.answer</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <div class="comment-section">
                <div class="card p-3  mt-3 bd-1">
                    <div class="form">
                        <h4>Add Questions</h4>
                        <input class="form-control" placeholder="Ask Questions..." id="questionInput" type="text">
                        <div class="mt-2 d-flex justify-content-end">
                            <div class="col-md-6">
                                <select class="form-select" aria-label="Default select example" id="selectAgency">
                                    <option value="default">Agency</option>
                                    @foreach (var agency in ViewBag.Agencies)
                                    {
                                        var fullName = agency.first_name + " " + agency.last_name;
                                        <option value="@agency.user_id">@fullName</option>
                                    }
                                </select>
                            </div>
                            <button class="btn btn-primary btn-sm ms-1" id="addQuestionBtn">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
