@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid p-5 align-content-center" >
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-3 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="/image/serveimage/?id=@Model.UserId" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">@{ 
                                var name = Model.FirstName + " " + Model.LastName;
                            }
                                <h4>@name</h4>
                                <p class="text-secondary mb-1">@Model.UserRole</p>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.FirstName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Last Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.LastName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone Number</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User Role</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserRole
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

