                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">User Role</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
                                @traveler.UserRole
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
