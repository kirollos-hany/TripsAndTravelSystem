</div>
@foreach (var traveler in ViewBag.Travelers)
{
    <div class="row d-flex align-items-center justify-content-center m-5">
        <div class="main-body">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="row  justify-content-xxl-around">
                                <div class="col-9">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex flex-column align-items-center text-center" id="xy">
                                                <img src="/image/serveimage/?id=@traveler.UserId" alt="Admin" class="rounded-circle" width="150" id="photo">
                                                <div class="mt-3">
                                                    <h4>@traveler.Email</h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3 p-3">
                                    <a id="Add" data-bs-toggle="modal" data-bs-target="#Agancy"><i class="fas fa-trash fa-lg" style="color:darkred;" onclick="deleteUser(@traveler.UserId)">&#xE254;</i></a>

                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
                                @traveler.FirstName
                            </div>

                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Last Name</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
                                @traveler.LastName
                            </div>

                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone Number</h6>
                            </div>
                            <div class="col-sm-6 text-secondary">
