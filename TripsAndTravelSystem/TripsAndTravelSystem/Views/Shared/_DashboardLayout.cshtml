<!doctype html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#7952b3">

    <title>@ViewBag.Title</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="~/Content/Bootstrab_css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Bootstrab_css/bootstrap.css" rel="stylesheet" />
    <link rel="icon" type="image/png" sizes="16x16" href="images/logo_by_NB.png">


    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"></script>

    <style>
        body {
            color: #404E67;
            background: #F5F7FA;
            font-family: 'Open Sans', sans-serif;
        }
        a {
            text-decoration: none;
            color: #1976d2
        }

            a.link {
                color: snow;
            }

                a.link:hover {
                    color: dimgrey;
                }
       
    </style>
    
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark ">
        <h6 style="color:aliceblue;font-size:30px;">  Trips and TravelSystem</h6>

        <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
            <ul class="navbar-nav justify-content-md-around p-2 menu">
                <li class="p-2 ">
                    <p style="font-size:20px;">
                        @Html.ActionLink("Admin profile page", "AdminProfile")
                    </p>
                </li>
                <li class="nav-item p-2">
                    <p style="font-size:20px;">

                        @Html.ActionLink("Users page", "userspage")
                    </p>
                </li>
                <li class="nav-item p-2">
                    <p style="font-size:20px;">

                        @Html.ActionLink("Posts page", "Postspage")
                    </p>
                </li>
                <li class="nav-item p-2">
                    <p style="font-size:20px;">

                        @Html.ActionLink("Post requests", "Postrequests")
                    </p>
                </li>
            </ul>
        </div>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap ">
                <a class="nav-link text-light" id="signout" style="cursor:pointer;">Signout</a>
            </li>
        </ul>
    </nav>
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        @RenderBody()
    </main>
    <script src="~/Scripts/signout.js"></script>
</body>
</html>
